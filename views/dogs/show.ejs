<%- include("../partials/header") %>

<h1>This is the Show route</h1>

<p><%= dog.name %></p>
<img src="<%= dog.image %>">
<p><%= dog.caption %></p>

<p>
    <a class="btn btn-primary" href="/dogs/<%= dog._id %>/comments/new">Add new comment</a>
</p>

<% dog.comments.forEach(function(comment){ %>
    <p>
        <strong><%= comment.author %></strong> - <%= comment.text %>
    </p>
<% }); %>

<%- include("../partials/footer") %>