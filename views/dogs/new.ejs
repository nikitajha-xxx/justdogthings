<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-lg-12 d-flex justify-content-center" style="margin: 25px auto;">
            <div class="card indexCards shadow border-0 mt-4 img-fluid">
                <img class="card-img-top" src="https://images.unsplash.com/photo-1558929996-da64ba858215?ixid=MXwxMjA3fDB8MHxzZWFyY2h8MTB8fGRvZ3N8ZW58MHwwfDB8&ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=60" alt="Card image" style="width:100%">

                <div class="card-img-overlay">
                    <h5 class="card-title text-center">Create a New Post</h5>
                    <form action="/dogs" method="POST">
                        <div class="form-group">
                            <input class="form-control form-control-lg" type="text" name="name" placeholder="name">
                        </div>
                        <div class="form-group">
                            <input class="form-control form-control-lg" type="text" name="image" placeholder="image url">
                        </div>
                        <div class="form-group">
                            <input class="form-control form-control-lg" type="text" name="caption" placeholder="caption">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-dark btn-lg btn-block">Submit</button>
                        </div>
                    </form>
                    <a href="/dogs">Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>







<%- include("../partials/footer") %>
