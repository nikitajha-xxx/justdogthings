<%- include("../partials/header") %>
        <style>
            body{
                font-family: 'Open Sans', sans-serif;
            }
            .card-title{
                font-weight: 600;
            }
            .special{
                background: #1CD8D2;  /* fallback for old browsers */
                background: -webkit-linear-gradient(to right, #93EDC7, #1CD8D2);  /* Chrome 10-25, Safari 5.1-6 */
                background: linear-gradient(to right, #93EDC7, #1CD8D2); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            }
        </style>
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 d-flex justify-content-center" style="margin: 25px auto;">
                    <div class="card special indexCards shadow-lg border-0 mt-2" style="width: 35rem;">
                        <div class="card-body">
                            <h5 class="card-title text-center"><i class="fas fa-paw fa-5x"></i></h5>
                            <h3 class="card-title text-center">Edit Your Profile</h3>
                            <form class="pt-5" action="/users/<%= user._id %>?_method=PUT" method="POST">
                                <div class="form-row">
                                    <div class="form-group col-md-6 pt-2">
                                        <label for="inputAge">Age</label>
                                        <input type="number" name="user[age]" class="form-control" id="inputAge" value="<%= user.age %>">
                                    </div>
                                    <div class="form-group col-md-6 pt-2">
                                        <label for="inputLocation">Location</label>
                                        <input type="text" name="user[location]" class="form-control" id="inputLocation" value="<%= user.location %>">
                                    </div>
                                </div>
                                <div class="form-group pt-2">
                                    <label for="inputAbout">About</label>
                                    <textarea class="form-control" id="inputAbout" rows="3" name="user[about]" maxlength="200"><%= user.about %></textarea>
                                </div>
                                <div class="form-group pt-3">
                                    <button class="btn btn-dark btn-lg btn-block">Edit</button>
                                </div>
                            </form>
                            <p class="text-center"><a href="/users/<%= user._id %>">Go back</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
<%- include("../partials/footer") %>

















