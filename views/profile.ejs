<%- include("./partials/header") %>

<div class="container">
    <div class="shadow-lg p-0 mb-5 special">
        <div class="jumbotron">
            <h1 class="display-4 text-white" style="text-transform: capitalize;"><%= user.username %></h1>
            <p class="lead text-white">Labra, Age 7</p>
            <hr class="my-4" style="visibility: hidden;">
            <p class="display-4 d-flex flex-row-reverse text-white" style="visibility: hidden;"><%= user.username %></p>
            <a class="btn btn-primary btn-lg" style="visibility: hidden;" href="#" role="button">Learn more</a>
        </div>

        <div class="container p-5 special">
            <div class="row">
                <div class="col-lg-4" style="margin-bottom: 750px;">
                    <div class="box">
                        <div class="card shadow-lg imp">
                            <img src="https://images.unsplash.com/photo-1501472193205-56ffb66400f0?ixid=MXwxMjA3fDB8MHxzZWFyY2h8NTB8fGRvZ3N8ZW58MHx8MHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=60" class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title">About</h5>
                                <p class="card-text">
                                    Lorem ipsum dolor sit amet, consectetur adipiscing elit, 
                                    sed do eiusmod tempor incididunt ut labore et dolore magna 
                                    aliqua. Ut enim ad minim veniam, quis nostrud exercitation 
                                    ullamco laboris nisi ut.
                                </p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-sm-between">
                                        <div class="p-0">
                                            <p class="lead">Posts</p>
                                        </div>
                                        <div class="p-0">
                                            <p class="lead"><%= count %></p>
                                        </div>
                                    </div>
                                </li>
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-sm-between">
                                        <div class="p-0">
                                            <p class="lead">Lives in</p>
                                        </div>
                                        <div class="p-0">
                                            <p class="lead">CA, United States</p>
                                        </div>
                                    </div>
                                </li>
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-sm-between">
                                        <div class="p-0">
                                            <p class="lead">Joined on</p>
                                        </div>
                                        <div class="p-0">
                                            <p class="lead">23 March, 2020</p>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <% if(currentUser._id.equals(user._id)){ %>
                        <div class="card shadow-lg border-0 bg-dark text-white mt-2 mb-4">
                            <div class="card-header">
                                <% if(count>0){ %>
                                    Your Contribution has been amazing <%= user.username %>
                                <% } else{ %>
                                    Hey <%= user.username %>, share you first post today
                                <% } %>
                            </div>
                            <div class="card-body">
                            <h5 class="card-title">We are sure this community will give you the love and praise you deserve everytime you share a part of your life with us</h5>
                            <p class="card-text">Share a New Blog</p>
                            <a href="/dogs/new" class="btn btn-primary">Go somewhere</a>
                            </div>
                        </div>
                    <% } %>
                    <div class="row">
                        <% dogs.forEach(function(dog){ %>
                            <div class="col-lg-12 d-flex justify-content-center">
                                <div class="card indexCards shadow border-0 mt-4 mb-4">
                                    <img src="data:dog/<%=dog.image.contentType%>;base64,
                                    <%=dog.image.data.toString('base64')%>" class="card-img-top rounded mx-auto d-block">
                                    <div class="card-body">
                                        <p class="card-text"><%= dog.title %> by <%= dog.author.username %></p>
                                        <a href="/dogs/<%= dog._id %>" class="card-link">View the full Post</a>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("./partials/footer") %>