<%- include("partials/header") %>
        <style>
            body{
                font-family: 'Open Sans', sans-serif;
            }
            .card-title{
                font-weight: 600;
            }
            .imp{
                background: #2BC0E4;  /* fallback for old browsers */
                background: -webkit-linear-gradient(to right, #EAECC6, #2BC0E4);  /* Chrome 10-25, Safari 5.1-6 */
                background: linear-gradient(to right, #EAECC6, #2BC0E4); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            }
        </style>
    </head>
    <body>
        <div class="container pt-4">
            <% if(error && error.length > 0){ %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>
            <% if(success && success.length > 0){ %>
                <div class="alert alert-success" role="alert">
                    <%= success %>
                </div>
            <% } %>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 d-flex justify-content-center" style="margin: 25px auto;">
                    <div class="card imp indexCards shadow-lg border-0 mt-2" style="width: 35rem;">
                        <div class="card-body">
                            <h5 class="card-title text-center"><i class="fas fa-paw fa-5x"></i></h5>
                            <h3 class="card-title text-center">Login</h3>
                            <p class="card-text text-center">Welcome back</p>
                            <form class="pt-5" action="/login" method="POST">
                                <div class="form-group">
                                    <label for="inputUsername">Username</label>
                                    <input type="text" class="form-control form-control-lg" id="inputUsername" name="username">
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword">Password</label>
                                    <input type="password" class="form-control form-control-lg" id="inputPassword" name="password">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-dark btn-lg btn-block">Login</button>
                                </div>
                            </form>
                            <p class="text-center">Don't have an account? <a href="/register">Join</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

<%- include("partials/footer") %>

















